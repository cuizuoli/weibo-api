<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="restTemplate" class="org.springframework.web.client.RestTemplate">
		<property name="requestFactory">
			<bean class="com.weibo.http.client.TrustClientHttpRequestFactory"></bean>
		</property>
		<property name="messageConverters">
			<array>
				<bean class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter">
					<property name="objectMapper">
						<bean class="com.weibo.http.client.ObjectMapperFactoryBean"/>
					</property>
				</bean>
				<bean class="org.springframework.http.converter.FormHttpMessageConverter">
					<property name="charset" value="UTF-8"></property>
				</bean>
				<bean class="org.springframework.http.converter.StringHttpMessageConverter"></bean>
			</array>
		</property>
	</bean>

	<bean id="oAuth2" class="com.weibo.api.OAuth2">
		<property name="appKey" value="${weibo.appkey}"></property>
		<property name="appSecret" value="${weibo.appsecret}"></property>
		<property name="redirectUri" value="${weibo.redirecturi}"></property>
	</bean>

</beans>
